# GenAI Stack Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ===========================================
# API KEYS - REQUIRED
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration  
GEMINI_API_KEY=your_gemini_api_key_here

# SerpAPI Configuration (for web search)
SERPAPI_KEY=your_serpapi_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://genai_user:genai_password@localhost:5432/genai_stack

# ===========================================
# VECTOR DATABASE CONFIGURATION
# ===========================================

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8001

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Secret key for JWT tokens (generate a strong random string)
SECRET_KEY=your_very_strong_secret_key_here_change_this_in_production

# JWT Algorithm
ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Backend API URL for frontend
REACT_APP_API_URL=http://localhost:8000

# WebSocket URL for real-time features
REACT_APP_WS_URL=ws://localhost:8000

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application name
APP_NAME=GenAI Stack

# Debug mode (true/false)
DEBUG=false

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# For production, you may want to override these:
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/prod_database
# CHROMA_HOST=your_chromadb_host
# REACT_APP_API_URL=https://your-api-domain.com
# REACT_APP_WS_URL=wss://your-api-domain.com







